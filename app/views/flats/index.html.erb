<div class="row">
  <% if @query %>
  <h2>You searched for <%= @query %> and <%= @flats.count %> flats where found</h2>
  <% end %>
  <% @flats.each do |flat| %>
  <div class="col-xs-12 col-sm-4">
    <div class="flat-card">
      <div class="flat-card-image" style="background-image: url('https://source.unsplash.com/random/300x200')">
      </div>
      <div class="flat-card-content">
        <div class="flat-card-title">
          <h4><%= flat.name %></h4>
        </div>
        <p><%= flat.address %></p>
        <div class="flex">
          <div class="flex">
            <i class="material-icons mr-2">people</i><span><%= flat.number_of_guests %></span>
          </div>
          <div class="flex ml-3">
            <i class="material-icons mr-2">euro_symbol</i> <%= flat.price_per_night %>
          </div>
        </div>
      </div>
      <div class="flat-card-actions">
        <%= link_to 'More Info', flat_path(flat)  %>
        <%= link_to 'Edit', edit_flat_path(flat)  %>
        <%= link_to 'Remove', flat_path(flat), method: :delete, data: { confirm: "Are you sure?" }  %>
      </div>
    </div>
  </div>
  <% end %>
</div>
